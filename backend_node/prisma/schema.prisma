// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid     String   @id @default(uuid())
  email    String  @unique
  name     String?
  userName String  @unique
  projects Project[]
  appliedTasks Task[]
  password String
  score ScoreUser?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Project {
  uuid String @id @default(uuid())
  name String
  description String?
  users User[]
  sprints Sprint[]
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Sprint {
  uuid String @id @default(uuid())
  taskUuid String?
  projectUuid String?
  project Project? @relation(fields: [projectUuid], references: [uuid])
  taks Task[]
  sprintPoints Int
}

model Task {
  uuid String @id @default(uuid())
  name String
  description String?
  startDate DateTime
  finishDate DateTime
  finishPrediction DateTime?
  sprint Sprint? @relation(fields: [sprintUuid] , references: [uuid])
  sprintUuid String?
  taskPoints Int
  userUuid String?
  responsibleUser User[]
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model ScoreUser {
  uuid String @id @default(uuid())
  user User @relation( fields: [userUuid], references: [uuid])
  userUuid String @unique
}